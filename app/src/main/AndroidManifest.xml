<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="id.anantyan.exerciseproject">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MyApplications"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_cors"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ExerciseProject.NoActionBar">
        <activity
            android:name=".ui.activity.profile.ProfileActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activity.MessagesDetailActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activity.BaseFragmentActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activity.signup.SignUpActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activity.signin.SignInActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activity.OnBoardActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activity.SplashActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activity.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.ExerciseProject.Main">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>