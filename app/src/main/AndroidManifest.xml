<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.exercise_project">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ExerciseProject">
        <activity
            android:name="com.example.exercise_project.UI.Home.ActivityForHome"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.exercise_project.UI.SignInUp.SignUpActivity"
            android:exported="false" />
        <activity
            android:name="com.example.exercise_project.UI.SignInUp.SignInActivity"
            android:exported="true">
        </activity>
        <activity
            android:name="com.example.exercise_project.UI.Splash.SplashActivity"
            android:exported="false" />
        <activity
            android:name="com.example.exercise_project.UI.onBoarding.onBoardingActivity"
            android:exported="false" />
        <activity
            android:name="com.example.exercise_project.Others.samplefragment.PicturesActivity"
            android:exported="false" />
        <activity
            android:name="com.example.exercise_project.Others.galleryfragment.GalleryActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="false" />
        <activity
            android:name=".UI.GetStartedActivity"
            android:exported="false" />
    </application>

</manifest>