<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_hospital1"
        android:layout_width="80dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginVertical="16dp"
        android:src="@drawable/img_hospital1"/>

    <TextView
        android:id="@+id/tv_nameHospital"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/iv_hospital1"
        app:layout_constraintTop_toTopOf="@id/iv_hospital1"
        android:text="Rumah Sakit\nCitra Bunga Merdeka"
        android:layout_marginLeft="9dp"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/tv_addressHospital"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="#112340"/>

    <TextView
        android:id="@+id/tv_addressHospital"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_nameHospital"
        app:layout_constraintLeft_toRightOf="@id/iv_hospital1"
        android:text="Jln. Surya Sejahtera 20"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="9dp"
        android:textSize="12sp"
        android:textColor="#7D8797"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/iv_hospital1"/>

    <View
        android:id="@+id/v_separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EEEEEE"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>