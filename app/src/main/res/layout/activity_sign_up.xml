<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/ic_arrow_back"
        android:layout_marginTop="32dp"
        android:layout_marginStart="16dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_daftar_akun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:fontFamily="@font/nunito_semi_bold"
        android:textSize="20sp"
        android:textColor="#112340"
        app:layout_constraintTop_toTopOf="@id/btn_back"
        app:layout_constraintBottom_toBottomOf="@id/btn_back"
        android:text="Daftar Akun"
        app:layout_constraintRight_toRightOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_full_name"
        style="@style/textForm"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="40dp"
        android:text="Full Name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_daftar_akun" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/input_full_name"
        style="@style/GeneralEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_outline_grey"
        app:layout_constraintLeft_toLeftOf="@id/tv_full_name"
        app:layout_constraintRight_toRightOf="@id/tv_full_name"
        app:layout_constraintTop_toBottomOf="@id/tv_full_name" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_pekerjaan"
        style="@style/textForm"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="24dp"
        android:text="Pekerjaan"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/input_full_name" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/input_pekerjaan"
        style="@style/GeneralEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_outline_grey"
        app:layout_constraintLeft_toLeftOf="@id/tv_pekerjaan"
        app:layout_constraintRight_toRightOf="@id/tv_pekerjaan"
        app:layout_constraintTop_toBottomOf="@id/tv_pekerjaan" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_email"
        style="@style/textForm"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="24dp"
        android:text="Email Address"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/input_pekerjaan" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/input_email"
        style="@style/GeneralEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_outline_grey"
        app:layout_constraintLeft_toLeftOf="@id/tv_email"
        app:layout_constraintRight_toRightOf="@id/tv_email"
        app:layout_constraintTop_toBottomOf="@id/tv_email" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_password"
        style="@style/textForm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="24dp"
        android:text="Password"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/input_email" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/input_password"
        style="@style/GeneralEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:background="@drawable/shape_outline_grey"
        app:layout_constraintLeft_toLeftOf="@id/tv_password"
        app:layout_constraintRight_toRightOf="@id/tv_password"
        app:layout_constraintTop_toBottomOf="@id/tv_password" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSignUp"
        style="@style/GeneralButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginVertical="40dp"
        android:text="Continue"
        app:layout_constraintTop_toBottomOf="@id/input_password"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>