<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="100dp"
    android:layout_height="130dp"
    android:layout_marginHorizontal="10dp"
    android:background="#EDFCFD">

    <ImageView
        android:id="@+id/iv_ic_konsul"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/img_dokter_umum"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/iv_txt_konsul"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginRight="12dp"
        android:text="Saya butuh dokter umum"
        android:textSize="12dp"
        app:layout_constraintLeft_toLeftOf="@id/iv_ic_konsul"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_ic_konsul" />

</androidx.constraintlayout.widget.ConstraintLayout>