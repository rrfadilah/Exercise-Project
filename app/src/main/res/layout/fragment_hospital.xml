<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.hospital.HospitalFragment">

    <ImageView
        android:id="@+id/ivBgHospital"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/iv_bg_hospital"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:id="@+id/tvNearbyHospital"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nearby Hospital"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:textSize="24sp"
        android:textStyle="normal"
        android:fontFamily="sans-serif-light"
        app:layout_constraintTop_toTopOf="@id/ivBgHospital"
        app:layout_constraintLeft_toLeftOf="@id/ivBgHospital"
        app:layout_constraintRight_toRightOf="@id/ivBgHospital"/>

    <TextView
        android:id="@+id/tvAvailableHospital"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3 tersedia"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tvNearbyHospital"
        app:layout_constraintLeft_toLeftOf="@id/tvNearbyHospital"
        app:layout_constraintRight_toRightOf="@id/tvNearbyHospital"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/cvHospital"
        android:layout_width="match_parent"
        android:layout_height="480dp"
        android:layout_marginTop="-48dp"
        app:cardCornerRadius="32dp"
        app:cardPreventCornerOverlap="true"
        app:cardElevation="2dp"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/ivBgHospital"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_mydata"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:backgroundTint="@color/white"
            tools:listitem="list item" />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>