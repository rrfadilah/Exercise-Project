<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="120dp"
    android:layout_height="150dp">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="110dp"
        android:layout_height="140dp"
        app:cardBackgroundColor="@color/bg_linear_horizontal"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_doctor"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:layout_marginTop="12dp"
                android:layout_marginStart="12dp"
                android:src="@drawable/icon_dokter_umum"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_sayabutuh"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginStart="12dp"
                android:text="Saya butuh"
                android:textSize="14sp"
                android:fontFamily="@font/nunitolight"
                android:textColor="#112340"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_doctor" />

            <TextView
                android:id="@+id/tv_doctor"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunitosemibold"
                android:text="dokter umum"
                android:textColor="#112340"
                android:textSize="14sp"
                android:layout_marginStart="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_sayabutuh" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>