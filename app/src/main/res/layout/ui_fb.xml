<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#D3D3D3">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/ivFotoProfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/foto_profil"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <EditText
                android:id="@+id/etSearch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_search"
                android:drawableLeft="@drawable/ic_search"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="10dp"
                android:hint="Search"
                android:paddingHorizontal="8dp"
                android:paddingVertical="8dp"
                app:layout_constraintLeft_toRightOf="@id/ivFotoProfil"
                app:layout_constraintRight_toLeftOf="@id/ivIcMessage"
                app:layout_constraintTop_toTopOf="@id/ivFotoProfil" />

            <ImageView
                android:id="@+id/ivIcMessage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_message"
                app:layout_constraintTop_toTopOf="@id/ivFotoProfil"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@id/etSearch"/>

            <TextView
                android:id="@+id/tvLike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="35dp"
                android:text="Like"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/ivFotoProfil"
                app:layout_constraintLeft_toLeftOf="@id/ivFotoProfil"/>

            <TextView
                android:id="@+id/tvComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="45dp"
                android:text="Comment"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/ivFotoProfil"
                app:layout_constraintLeft_toRightOf="@id/tvLike"/>

            <TextView
                android:id="@+id/tvShare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="45dp"
                android:text="Share"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/ivFotoProfil"
                app:layout_constraintRight_toLeftOf="@id/tvSend"/>

            <TextView
                android:id="@+id/tvSend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="35dp"
                android:text="Send"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/ivFotoProfil"
                app:layout_constraintRight_toRightOf="@id/ivIcMessage"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="7dp"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cvTop"
        tools:listitem="@layout/list_item_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>