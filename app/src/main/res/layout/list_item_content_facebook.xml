<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginBottom="10dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ivIconProfilDribble"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/personimage"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvNameProfilDribble"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Deven Mestry"
                android:textSize="17sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toRightOf="@id/ivIconProfilDribble"
                app:layout_constraintTop_toTopOf="@id/ivIconProfilDribble" />

            <TextView
                android:id="@+id/tvJumlahFollowers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 h .  Mumbai, Maharastra ."
                app:layout_constraintLeft_toLeftOf="@id/tvNameProfilDribble"
                app:layout_constraintTop_toBottomOf="@id/tvNameProfilDribble" />

            <ImageView
                android:id="@+id/iv_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_group_icon"
                app:layout_constraintStart_toEndOf="@+id/tvJumlahFollowers"
                app:layout_constraintTop_toBottomOf="@+id/tvNameProfilDribble" />

            <TextView
                android:id="@+id/tvTextContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Old is Gold..!!"
                android:textSize="12sp"
                app:layout_constraintLeft_toLeftOf="@id/ivIconProfilDribble"
                app:layout_constraintTop_toBottomOf="@id/ivIconProfilDribble" />

            <ImageView
                android:id="@+id/ivImageContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/rectangle29"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvTextContent" />

            <ImageView
                android:id="@+id/ivIconLove"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginStart="11dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/like"
                app:layout_constraintLeft_toLeftOf="@id/ivIconProfilDribble"
                app:layout_constraintTop_toBottomOf="@id/ivIconSuka" />

            <ImageView
                android:id="@+id/ivIconInsight"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_marginStart="11dp"
                android:layout_marginTop="14dp"
                android:src="@drawable/heart"
                app:layout_constraintLeft_toLeftOf="@id/ivIconLove"
                app:layout_constraintTop_toBottomOf="@id/ivIconSuka" />

            <TextView
                android:id="@+id/tvCountAppreciate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:text="Liked by Sachin Kamble and 155 others "
                android:textSize="11sp"
                app:layout_constraintLeft_toRightOf="@id/ivIconInsight"
                app:layout_constraintTop_toTopOf="@id/ivIconLove" />

            <TextView
                android:id="@+id/tvCountCommentShare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:text="9 commentsâ€¢47 shares"
                android:textSize="11sp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/ivIconLove" />

            <ImageView
                android:id="@+id/ivBatas1"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginBottom="10dp"
                android:background="#D3D3D3"
                app:layout_constraintBottom_toTopOf="@+id/ivIconProfilDribble"
                app:layout_constraintLeft_toLeftOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivIconSuka"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="27dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_like"
                app:layout_constraintLeft_toLeftOf="@id/ivIconProfilDribble"
                app:layout_constraintTop_toBottomOf="@id/ivImageContent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivIconComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_commentar"
                app:layout_constraintLeft_toRightOf="@id/ivIconSuka"
                app:layout_constraintTop_toBottomOf="@id/ivImageContent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivIconSend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_massanger"
                app:layout_constraintLeft_toRightOf="@id/ivIconComment"
                app:layout_constraintTop_toBottomOf="@id/ivImageContent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>