<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_img"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/img_doctor_1" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="16dp"
        android:fontFamily="@font/nunito_semi_bold"
        android:textColor="#112340"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@id/iv_img"
        app:layout_constraintTop_toTopOf="@id/iv_img"
        tools:text="Alexa Rachel" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_specialist"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="#7D8797"
        android:textSize="12sp"
        android:fontFamily="@font/nunito_semi_bold"
        android:textStyle="normal"
        app:layout_constraintLeft_toLeftOf="@id/tv_name"
        app:layout_constraintRight_toRightOf="@id/tv_name"
        app:layout_constraintTop_toBottomOf="@id/tv_name"
        app:layout_constraintBottom_toBottomOf="@id/iv_img"
        tools:text="Pediatrician" />

    <androidx.appcompat.widget.AppCompatRatingBar
        android:id="@+id/pbDoctorRate"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="79dp"
        android:layout_height="15dp"
        android:layout_marginTop="13dp"
        android:layout_marginRight="20dp"
        android:padding="0dp"
        android:progress="80"
        android:progressTint="#F8B459"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/iv_img"
        app:layout_constraintTop_toTopOf="@id/iv_img" />

</androidx.constraintlayout.widget.ConstraintLayout>