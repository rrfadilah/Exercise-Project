<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="#16202a"
    app:cardElevation="3dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_item_twitter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_user_1"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="6dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@color/white"/>

        <TextView
            android:id="@+id/tv_name_user_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/iv_user_1"
            app:layout_constraintTop_toTopOf="@id/iv_user_1"
            android:layout_marginLeft="8dp"
            android:textColor="@color/white"
            android:text="Nama User"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_username_user_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/tv_name_user_1"
            app:layout_constraintTop_toTopOf="@id/tv_name_user_1"

            android:layout_marginLeft="8dp"
            android:textColor="#dcdcdc"
            android:text="username" />

        <TextView
            android:id="@+id/tv_titik_item_twitter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â€¢"
            app:layout_constraintTop_toTopOf="@id/tv_username_user_1"
            app:layout_constraintLeft_toRightOf="@id/tv_username_user_1"
            app:layout_constraintBottom_toBottomOf="@id/tv_username_user_1"
            android:textColor="#dcdcdc"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="2dp"/>

        <TextView
            android:id="@+id/tv_time_item_twitter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2s"
            app:layout_constraintLeft_toRightOf="@id/tv_titik_item_twitter"
            app:layout_constraintTop_toTopOf="@id/tv_username_user_1"
            app:layout_constraintBottom_toBottomOf="@id/tv_username_user_1"
            android:layout_marginLeft="4dp"
            android:textColor="#dcdcdc"/>

        <ImageView
            android:id="@+id/iv_menu_user_twitter"
            android:layout_width="16dp"
            android:layout_height="16dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_name_user_1"
            android:src="@drawable/iv_menu_user_twiter"/>

        <TextView
            android:layout_width="317dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/lorem_ipsum"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/tv_name_user_1"
            app:layout_constraintRight_toLeftOf="@id/iv_menu_user_twitter"
            app:layout_constraintTop_toBottomOf="@id/tv_name_user_1"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:elevation="5dp" android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>