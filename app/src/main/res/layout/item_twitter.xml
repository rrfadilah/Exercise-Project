<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="#16202a"
    app:cardElevation="3dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_item_twitter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/iv_user_1"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="6dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@color/white"/>

        <TextView
            android:id="@+id/tv_name_user_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/iv_user_1"
            app:layout_constraintTop_toTopOf="@id/iv_user_1"
            android:layout_marginLeft="8dp"
            android:textColor="@color/white"
            android:text="Nama User"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_username_user_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/tv_name_user_1"
            app:layout_constraintTop_toTopOf="@id/tv_name_user_1"

            android:layout_marginLeft="8dp"
            android:textColor="#dcdcdc"
            android:text="username" />

        <TextView
            android:id="@+id/tv_titik_item_twitter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â€¢"
            app:layout_constraintTop_toTopOf="@id/tv_username_user_1"
            app:layout_constraintLeft_toRightOf="@id/tv_username_user_1"
            app:layout_constraintBottom_toBottomOf="@id/tv_username_user_1"
            android:textColor="#dcdcdc"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="2dp"/>

        <TextView
            android:id="@+id/tv_time_item_twitter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2s"
            app:layout_constraintLeft_toRightOf="@id/tv_titik_item_twitter"
            app:layout_constraintTop_toTopOf="@id/tv_username_user_1"
            app:layout_constraintBottom_toBottomOf="@id/tv_username_user_1"
            android:layout_marginLeft="4dp"
            android:textColor="#dcdcdc"/>

        <ImageView
            android:id="@+id/iv_menu_user_twitter"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginRight="6dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_name_user_1"
            android:src="@drawable/iv_menu_user_twiter"/>

        <TextView
            android:id="@+id/tv_content_text_twitter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text=""
            android:textColor="@color/white"
            app:layout_constraintLeft_toLeftOf="@id/tv_name_user_1"
            app:layout_constraintRight_toLeftOf="@id/iv_menu_user_twitter"
            app:layout_constraintTop_toBottomOf="@id/tv_name_user_1"
            />

        <androidx.cardview.widget.CardView
            android:id="@+id/card_gambar_twitter"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/ic_baseline_image_24"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            app:layout_constraintDimensionRatio="3:2"
            app:layout_constraintTop_toBottomOf="@id/tv_content_text_twitter"
            app:layout_constraintLeft_toLeftOf="@id/tv_content_text_twitter"
            app:layout_constraintRight_toRightOf="@id/tv_content_text_twitter"
            app:layout_constraintHorizontal_bias="0.0"
            app:cardCornerRadius="10dp">

            <ImageView
                android:id="@+id/iv_gambar_twitter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@color/blue_700"/>

        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btn_comment"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:drawableTop="@drawable/ic_baseline_comment_24"
            app:layout_constraintTop_toBottomOf="@id/card_gambar_twitter"
            app:layout_constraintLeft_toLeftOf="@id/card_gambar_twitter"
            />
        <TextView
            android:id="@+id/tv_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="text"
            android:layout_marginLeft="5dp"
            app:layout_constraintLeft_toRightOf="@id/btn_comment"
            app:layout_constraintTop_toBottomOf="@id/card_gambar_twitter"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <Button
            android:id="@+id/btn_retweet"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:drawableTop="@drawable/ic_baseline_repeat_24"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintLeft_toRightOf="@id/tv_comment"
            app:layout_constraintTop_toBottomOf="@id/card_gambar_twitter"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
            android:id="@+id/tv_retweet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="text"
            android:layout_marginLeft="5dp"
            app:layout_constraintLeft_toRightOf="@id/btn_retweet"
            app:layout_constraintTop_toBottomOf="@id/card_gambar_twitter"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <Button
            android:id="@+id/btn_like"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:drawableTop="@drawable/ic_baseline_favorite_border_24"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintLeft_toRightOf="@id/tv_retweet"
            app:layout_constraintTop_toBottomOf="@id/card_gambar_twitter"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
            android:id="@+id/tv_like"
            android:text="text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            app:layout_constraintTop_toBottomOf="@id/card_gambar_twitter"
            app:layout_constraintLeft_toRightOf="@id/btn_like"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <Button
            android:id="@+id/btn_share"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:drawableTop="@drawable/ic_baseline_share_24"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintLeft_toRightOf="@id/tv_like"
            app:layout_constraintTop_toBottomOf="@id/card_gambar_twitter"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:elevation="5dp"
            android:background="#414141"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>