<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.signup.OnSignupActivity">

    <ImageView
        android:id="@+id/ivArrowBack"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="36dp"
        android:src="@drawable/ic_arrowback"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="36dp"
        android:text="Daftar Akun"
        android:textColor="#112340"
        android:textFontWeight="600"
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@id/ivArrowBack"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvFullName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/fontTulis"
        android:text="Full Name"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="56dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivArrowBack" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etFullName"
        style="@style/GeneraleditText"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_marginTop="6dp"
        android:inputType="textEmailAddress"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvFullName" />

    <TextView
        android:id="@+id/tvPekerjaan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pekerjaan"
        style="@style/fontTulis"
        android:layout_marginTop="24dp"
        app:layout_constraintLeft_toLeftOf="@id/tvFullName"
        app:layout_constraintTop_toBottomOf="@id/etFullName" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etPekerjaan"
        style="@style/GeneraleditText"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_marginTop="6dp"
        android:inputType="textEmailAddress"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvPekerjaan"/>

    <TextView
        android:id="@+id/tvEmailAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email Address"
        android:layout_marginTop="24dp"
        style="@style/fontTulis"
        app:layout_constraintLeft_toLeftOf="@id/tvPekerjaan"
        app:layout_constraintTop_toBottomOf="@id/etPekerjaan"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etEmail"
        style="@style/GeneraleditText"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_marginTop="6dp"
        android:inputType="textEmailAddress"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvEmailAddress" />

    <TextView
        android:id="@+id/tvPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        style="@style/fontTulis"
        android:layout_marginTop="24dp"
        app:layout_constraintLeft_toLeftOf="@id/tvEmailAddress"
        app:layout_constraintTop_toBottomOf="@id/etEmail" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etPassword"
        style="@style/GeneraleditText"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_marginTop="6dp"
        android:inputType="textPassword"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvPassword" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="280dp"
        android:layout_height="45dp"
        android:layout_marginTop="40dp"
        style="@style/GeneralSignIn"
        android:text="Continue"
        android:textSize="18sp"
        android:textFontWeight="600"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etPassword" />



</androidx.constraintlayout.widget.ConstraintLayout>