<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.Home.Doctor.FragmentDoctor">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/riv_profile"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/profile_pic"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:riv_corner_radius="50dp" />

            <TextView
                android:id="@+id/tv_Nama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="-22dp"
                android:fontFamily="@font/nunitosemibold"
                android:text="Shayna Melinda"
                android:textColor="#112340"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/riv_profile"
                app:layout_constraintStart_toEndOf="@+id/riv_profile"
                app:layout_constraintTop_toTopOf="@+id/riv_profile" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/nunitoregular"
                android:text="Product Designer"
                android:textColor="#7D8797"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@+id/tv_Nama"
                app:layout_constraintTop_toBottomOf="@+id/tv_Nama" />

            <TextView
                android:id="@+id/tv_HeaderDoctor"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:text="Mau konsultasi dengan siapa hari ini?"
                android:textSize="22sp"
                android:textColor="#112340"
                android:layout_marginStart="20dp"
                android:layout_marginTop="35dp"
                android:fontFamily="@font/nunitosemibold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/riv_profile" />

            <TextView
                android:id="@+id/logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Logout"
                app:layout_constraintBottom_toTopOf="@+id/textView2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_Nama"
                app:layout_constraintTop_toTopOf="@+id/tv_Nama" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_listDoctor"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_HeaderDoctor" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/nunitosemibold"
                android:text="Top Rated Doctors"
                android:textColor="#112340"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rv_listDoctor" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_listRatedDoctor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />

            <TextView
                android:id="@+id/tv_HeaderDoctor2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunitosemibold"
                android:text="Good News"
                android:textColor="#112340"
                android:textSize="16sp"
                android:layout_marginTop="30dp"
                android:layout_marginStart="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rv_listRatedDoctor" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_GoodNews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_HeaderDoctor2" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</FrameLayout>