<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_doctor">

    <fragment
        android:id="@+id/navigation_doctor"
        android:name="com.example.exercise_project.home.ui.doctor.DoctorFragment"
        android:label="@string/title_doctor"
        tools:layout="@layout/fragment_doctor">
        <action
            android:id="@+id/action_navigation_doctor_to_navigation_messages"
            app:destination="@id/navigation_messages" />
        <action
            android:id="@+id/action_navigation_doctor_to_navigation_hospital"
            app:destination="@id/navigation_hospital" />
    </fragment>

    <fragment
        android:id="@+id/navigation_messages"
        android:name="com.example.exercise_project.home.ui.messages.MessagesFragment"
        android:label="@string/title_messages"
        tools:layout="@layout/fragment_messages">
        <action
            android:id="@+id/action_navigation_messages_to_navigation_hospital"
            app:destination="@id/navigation_hospital" />
    </fragment>

    <fragment
        android:id="@+id/navigation_hospital"
        android:name="com.example.exercise_project.home.ui.hospital.HospitalFragment"
        android:label="@string/title_hospital"
        tools:layout="@layout/fragment_hospital" />
</navigation>