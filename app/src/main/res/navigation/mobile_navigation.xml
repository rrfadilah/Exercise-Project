<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_doctor">

    <fragment
        android:id="@+id/navigation_doctor"
        android:name="com.example.mydoctor.home.ui.doctor.DoctorFragment"
        android:label="@string/title_doctor"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_messages"
        android:name="com.example.mydoctor.home.ui.message.MessageFragment"
        android:label="@string/title_messages"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_hospitals"
        android:name="com.example.mydoctor.home.ui.hospital.HospitalFragment"
        android:label="@string/title_hospitals"
        tools:layout="@layout/fragment_notifications" />
</navigation>